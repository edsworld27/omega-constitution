<!--
  ============================================================
  OMEGA SKILLS PROTOCOL
  ============================================================
  VERSION:      1.0
  STATUS:       LAW
  PURPOSE:      Defines all skills available to any AI agent
                operating under the Omega Constitution.
                These are NOT IDE-specific skills - they are
                universal capabilities that work in ANY environment.

  USAGE:        Any AI that reads this file HAS these skills.
                No special IDE configuration needed.
  ============================================================
-->

<omega_skills
  version="1.0"
  status="LAW"
  location="constitution/">

  <!-- ============================================================
       PHILOSOPHY: THE CONSTITUTION IS THE SKILL SYSTEM
  ============================================================ -->

  <philosophy>
    <principle>The Omega Constitution IS the skill system.</principle>
    <principle>Any AI that loads the constitution HAS all skills.</principle>
    <principle>Skills work in ANY IDE: Claude Code, Cursor, Antigravity, VS Code, etc.</principle>
    <principle>No IDE-specific configuration needed - just read the files.</principle>
    <principle>The treemaps, cookbooks, and protocols ARE the skills.</principle>
  </philosophy>

  <!-- ============================================================
       SKILL CATEGORIES
  ============================================================ -->

  <skill_categories>

    <!-- CONTEXT SKILLS -->
    <category name="Context Management">
      <skill name="omega-context-load">
        <trigger>User asks to load/check context</trigger>
        <action>Read 03_Context/CONTEXT_DEV.md</action>
        <protocol>CONTEXT_PROTOCOL.xml</protocol>
      </skill>

      <skill name="omega-context-save">
        <trigger>Session ending OR major milestone</trigger>
        <action>Write session summary to 03_Context/CONTEXT_DEV.md</action>
        <protocol>CONTEXT_PROTOCOL.xml</protocol>
      </skill>

      <skill name="omega-fractal-create">
        <trigger>Major change needs versioned record</trigger>
        <action>Create shard in 03_Context/modules/v[X]_[name].md</action>
        <protocol>FRACTAL_PROTOCOL.xml</protocol>
      </skill>
    </category>

    <!-- STRUCTURE SKILLS -->
    <category name="Structure Navigation">
      <skill name="omega-treemap">
        <trigger>User asks about structure</trigger>
        <action>Read TREEMAP.md and display hierarchy</action>
      </skill>

      <skill name="omega-find">
        <trigger>User needs to locate file/pattern</trigger>
        <action>Use Glob/Grep to search, reference treemaps</action>
      </skill>
    </category>

    <!-- PUBLISHING SKILLS -->
    <category name="Publishing">
      <skill name="omega-publish">
        <trigger>User wants to publish to GitHub</trigger>
        <action>
          1. Run pre-publish checklist
          2. Execute python omega-publish.py "message"
          3. Verify success
        </action>
        <protocol>GITHUB_PUBLISHING.xml</protocol>
      </skill>

      <skill name="omega-commit">
        <trigger>User wants to commit changes</trigger>
        <action>Use commit standards from GITHUB_PUBLISHING.xml</action>
        <commit_types>feat, fix, docs, refactor, sync, protocol, kit, skill, agent</commit_types>
      </skill>
    </category>

    <!-- KNOWLEDGE SKILLS -->
    <category name="Knowledge Access">
      <skill name="omega-cookbook">
        <trigger>Need Claude implementation patterns</trigger>
        <action>Reference CLAUDE_COOKBOOKS_REFERENCE.md in omega-store/skills/</action>
        <source>https://github.com/anthropics/claude-cookbooks</source>
        <protocol>SOURCES.xml Tier 3</protocol>
      </skill>

      <skill name="omega-security">
        <trigger>Security question or validation needed</trigger>
        <action>Read and apply SECURITY.xml</action>
        <protocol>SECURITY.xml</protocol>
      </skill>

      <skill name="omega-quality">
        <trigger>Quality check or audit needed</trigger>
        <action>Read and apply QUALITY.xml</action>
        <protocol>QUALITY.xml</protocol>
      </skill>
    </category>

    <!-- BUILD SKILLS -->
    <category name="Building">
      <skill name="omega-onboard">
        <trigger>New user starting project</trigger>
        <action>Execute ONBOARDING.md flow</action>
        <protocol>ONBOARDING.md</protocol>
      </skill>

      <skill name="omega-kit">
        <trigger>User needs a project kit</trigger>
        <action>Load kit from omega-store/kits/</action>
        <protocol>STORE_GUIDE.md</protocol>
      </skill>

      <skill name="omega-blueprint">
        <trigger>User needs a template</trigger>
        <action>Load from blueprints/</action>
        <available>PRD.md, SOP.md, TEST_PLAN.md, HANDOFF.md, etc.</available>
      </skill>
    </category>

    <!-- AGENT SKILLS -->
    <category name="Agent Behaviors">
      <skill name="omega-analyst">
        <trigger>Deep analysis needed</trigger>
        <source>omega-store/skills/analyst-agent.md</source>
      </skill>

      <skill name="omega-classifier">
        <trigger>Categorization needed</trigger>
        <source>omega-store/skills/classifier-agent.md</source>
      </skill>

      <skill name="omega-guardian">
        <trigger>Security/compliance check</trigger>
        <source>omega-store/skills/guardian-agent.md</source>
      </skill>

      <skill name="omega-orchestrator">
        <trigger>Multi-task coordination</trigger>
        <source>omega-store/skills/orchestrator-agent.md</source>
      </skill>

      <skill name="omega-writer">
        <trigger>Content generation</trigger>
        <source>omega-store/skills/writer-agent.md</source>
      </skill>
    </category>

  </skill_categories>

  <!-- ============================================================
       IDE INTEGRATION
  ============================================================ -->

  <ide_integration>
    <description>
      The constitution works in ANY IDE. Here's how:
    </description>

    <ide name="Claude Code">
      <setup>Single skill /omega loads constitution</setup>
      <location>.claude/skills/omega/SKILL.md</location>
      <hook>SessionStart auto-loads context</hook>
    </ide>

    <ide name="Cursor">
      <setup>.cursorrules points to constitution</setup>
      <location>.cursorrules</location>
      <action>AI reads constitution on project open</action>
    </ide>

    <ide name="Antigravity">
      <setup>Constitution folder in project</setup>
      <action>AI reads INSTRUCTOR.xml on activation</action>
    </ide>

    <ide name="VS Code + Copilot">
      <setup>CLAUDE.md or .github/copilot-instructions.md</setup>
      <action>AI reads instructions pointing to constitution</action>
    </ide>

    <ide name="Any IDE">
      <setup>Include constitution files in project</setup>
      <action>
        Tell AI: "Read INSTRUCTOR.xml and follow the Omega Constitution"
      </action>
      <fallback>
        Paste constitution URL: https://github.com/edsworld27/omega-constitution
      </fallback>
    </ide>
  </ide_integration>

  <!-- ============================================================
       SKILL INVOCATION
  ============================================================ -->

  <skill_invocation>
    <description>
      Skills can be invoked by:
      1. User request (natural language)
      2. Protocol trigger (automatic)
      3. Direct command (if IDE supports)
    </description>

    <examples>
      <example>
        <user_says>"Save my context"</user_says>
        <triggers>omega-context-save</triggers>
      </example>

      <example>
        <user_says>"Publish to GitHub"</user_says>
        <triggers>omega-publish</triggers>
      </example>

      <example>
        <user_says>"Show me the structure"</user_says>
        <triggers>omega-treemap</triggers>
      </example>

      <example>
        <user_says>"I need a PRD template"</user_says>
        <triggers>omega-blueprint â†’ PRD.md</triggers>
      </example>
    </examples>
  </skill_invocation>

  <!-- ============================================================
       MEMORY PROTOCOL
  ============================================================ -->

  <memory_protocol>
    <rule>AI agents do NOT use internal memory</rule>
    <rule>The file system IS memory</rule>

    <locations>
      <location purpose="Current State">03_Context/CONTEXT_DEV.md</location>
      <location purpose="Structure">TREEMAP.md</location>
      <location purpose="History">00_Changelog/</location>
      <location purpose="Shards">03_Context/modules/</location>
    </locations>

    <behavior>
      <on_session_start>Read context files</on_session_start>
      <during_session>Reference files, don't remember</during_session>
      <on_session_end>Write context to files</on_session_end>
    </behavior>
  </memory_protocol>

</omega_skills>
