{
  "_comment": "OMEGA PUBLISH CONFIGURATION - Copy to publish.config.json and customize",

  "repositories": [
    {
      "name": "my-project",
      "local_path": "./",
      "remote_url": "https://github.com/YOUR_USERNAME/YOUR_REPO.git",
      "branch": "main"
    }
  ],

  "_multi_repo_example": {
    "_comment": "Example for multi-repo architecture (uncomment and modify)",
    "repositories": [
      {
        "name": "frontend",
        "local_path": "./frontend",
        "remote_url": "https://github.com/YOUR_USERNAME/frontend.git",
        "branch": "main"
      },
      {
        "name": "backend",
        "local_path": "./backend",
        "remote_url": "https://github.com/YOUR_USERNAME/backend.git",
        "branch": "main"
      },
      {
        "name": "docs",
        "local_path": "./docs",
        "remote_url": "https://github.com/YOUR_USERNAME/docs.git",
        "branch": "main"
      }
    ]
  },

  "pre_publish_checks": true,
  "auto_tag": false,

  "commit_types": [
    "feat",
    "fix",
    "docs",
    "style",
    "refactor",
    "test",
    "chore",
    "security",
    "perf"
  ],

  "forbidden_patterns": [
    "API_KEY",
    "SECRET",
    "PASSWORD",
    "TOKEN",
    "PRIVATE_KEY",
    "aws_access_key",
    "client_secret"
  ]
}
